<p id="notice"><%= notice %></p>

<p>
  <strong>Jméno:</strong>
  <%= @employee.name %>
</p>

<p>
  <strong>Příjmení:</strong>
  <%= @employee.surname %>
</p>

<p>
  <strong>Adresa:</strong>
   <%= @employee.street %>, <%= @employee.post_number.to_s[0..2] %> <%= @employee.post_number.to_s[3..4] %>  <%= @employee.city%>
</p>

<p>
  <strong>Rodné číslo:</strong>
  <%= @employee.social_security_number %>
</p>

<p>
  <strong>Datum narození:</strong>
  <%= @employee.birth_date.strftime("%d-%m-%Y") %>
</p>

<%= link_to 'Editovat', edit_employee_path(@employee) %> |
<%= link_to 'Zpět', employees_path %>
