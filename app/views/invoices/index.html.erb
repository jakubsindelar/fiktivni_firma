<h1>Přehled obědnávek</h1>

<table>
  <thead>
    <tr>
      <th>Zákazník</th>
      <th>Datum vytvoření</th>
      <th>Typ platby</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.user_id %></td>
        <td><%= invoice.date_created %></td>
        <td><%= invoice.payment_date %></td>
        <td><%= invoice.amount %></td>
        <td><%= link_to 'Zobrazit', invoice %></td>
        <td><%= link_to 'Upravit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Smazat', invoice, method: :delete, data: { confirm: 'Opravdu chcete pkračovat?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nová objednávka', new_invoice_path %>
