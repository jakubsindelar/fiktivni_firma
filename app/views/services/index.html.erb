<h1>Listing services</h1>

<table>
  <thead>
    <tr>
      <th>Client</th>
      <th>Service</th>
      <th>Status</th>
      <th>Expirate date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.client_id %></td>
        <td><%= service.service %></td>
        <td><%= service.status %></td>
        <td><%= service.expirate_date %></td>
        <td><%= link_to 'Show', service %></td>
        <td><%= link_to 'Edit', edit_service_path(service) %></td>
        <td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

