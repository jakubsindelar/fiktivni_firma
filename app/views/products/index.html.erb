<h1>Listing products</h1>

<table class="table-bordered">
  <thead>
    <tr>
      <th class="col-md-2">Name</th>
      <th class="col-md-1">Size</th>
      <th class="col-md-1">Account</th>
      <th class="col-md-1">Backup</th>
      <th class="col-md-1">Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td class="col-md-2"><%= product.name %></td>
        <td class="col-md-1"><%= product.size %></td>
        <td class="col-md-1"><%= product.account %></td>
        <td class="col-md-1"><%= product.backup %></td>
        <td class="col-md-1"><%= product.amount %></td>
        <td class="col-md-1"><%= link_to 'Show', product %></td>
        <td class="col-md-1"><%= link_to 'Edit', edit_product_path(product) %></td>
        <td class="col-md-1"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

